{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 450,
  "title": "Global CO₂ Emissions (2023, MtCO₂)",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/GComputeNerd/test/refs/heads/main/data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
  {
    "lookup": "properties.ISO_N3",
    "from": {
      "data": {"url": "https://raw.githubusercontent.com/GComputeNerd/test/refs/heads/main/data/iso_emissions.csv"},
      "key": "iso_n3",
      "fields": ["country", "co2"]
    }
  }
],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "color": {
      "field": "co2",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "title": "Total CO₂ (MtCO₂)"
    },
    "tooltip": [
      {"field": "country", "title": "Country"},
      {"field": "co2", "title": "Total CO₂ (Mt)"}
    ]
  }
}
